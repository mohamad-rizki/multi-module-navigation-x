<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_normal">

        <TextView
            style="@style/TextAppearance.MaterialComponents.Headline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Module Dashboard" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_normal" />

        <Button
            android:id="@+id/bt_menu_radio"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Menu Radio"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_normal" />

        <Button
            android:id="@+id/bt_menu_live_tv"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Menu Live TV"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_normal" />

        <Button
            android:id="@+id/bt_menu_prayer_time"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Menu Jadwal Sholat"
            android:textColor="@color/colorWhite"
            android:textSize="24sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>